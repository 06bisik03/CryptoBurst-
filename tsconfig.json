{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["dom", "es2015"],
      "allowJs": true,
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }